<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Backend</display-name>
  <servlet>
    <servlet-name>VersionServlet</servlet-name>
    <servlet-class>backend.servlets.VersionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>VersionServlet</servlet-name>
    <url-pattern>/api/version</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AnimalServlet</servlet-name>
    <servlet-class>backend.servlets.AnimalServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>AnimalServlet</servlet-name>
    <url-pattern>/animals</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AnimalServlet</servlet-name>
    <url-pattern>/animals/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ComboServlet</servlet-name>
    <servlet-class>backend.servlets.ComboServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ComboServlet</servlet-name>
    <url-pattern>/combos</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ComboServlet</servlet-name>
    <url-pattern>/combos/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>backend.servlets.LoginServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>backend.servlets.UserServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/users/*</url-pattern>
  </servlet-mapping>
</web-app>